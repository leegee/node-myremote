{
  "name": "node-myremote",
  "description": "Send key combinations to a Windows application from a browser",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "bin": "src/systray-server.mjs",
  "scripts": {
    "start": "node src/systray-server.mjs",
    "dev": "vite",
    "build": "vite build",
    "prebuild:dotnet": "bun run build",
    "build:dotnet": "cd dotnet/MyRemote && dotnet restore && dotnet build -c Release && open bin/Release/net4.8.1-windows",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
    "prepkg": "npm run check && npm run build",
    "pkg": "pkg . --debug"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "node-window-manager": "^2.2.4",
    "open": "^10.1.0",
    "robotjs": "^0.6.0",
    "trayicon": "^1.2.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.8.7",
    "pkg": "^5.8.1",
    "svelte": "^5.1.3",
    "svelte-check": "^4.0.5",
    "tslib": "^2.8.0",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vite-plugin-singlefile": "^2.0.3"
  },
  "pkg": {
    "targets": [
      "node14-win-x64"
    ],
    "assets": [
      "pkg-dist/**/*",
      "src/systray-icon.ico"
    ],
    "outputPath": "dist"
  }
}
