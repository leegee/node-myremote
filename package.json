{
  "name": "node-myremote",
  "description": "Send key combinations to a Windows application from a browser",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "bin": "src/systray-server.mjs",
  "scripts": {
    "start": "node src/systray-server.mjs",
    "dev": "vite",
    "build": "vite build",
    "prebuild:dotnet": "bun run build; node -e \"fs=require('fs');fs.copyFileSync('./dist/index.html', './dotnet/MyRemote/index.html');fs.copyFileSync('src/assets/systray-icon.ico', 'dotnet/MyRemote/systray-icon.ico');fs.copyFileSync('.env', 'dotnet/MyRemote/.env');\"",
    "build:dotnet": "cd dotnet/MyRemote && dotnet restore && dotnet build -c Release; # See bin/Release/net4.8.1-windows",
    "start:dotnet": "cd ./dotnet/MyRemote/bin/Release/net4.8.1-windows/; ./MyRemote.exe",
    "bundle": "tar -cvf \"dist/MyRemote.tar\" --exclude=\"*/\" -C \"dotnet/MyRemote/bin/Release/net4.8.1-windows/\" . && echo Open dist/ to see the tar ball",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "node-window-manager": "^2.2.4",
    "open": "^10.1.0",
    "robotjs": "^0.6.0",
    "trayicon": "^1.2.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.8.7",
    "pkg": "^5.8.1",
    "svelte": "^5.1.3",
    "svelte-check": "^4.0.5",
    "tslib": "^2.8.0",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vite-plugin-singlefile": "^2.0.3"
  }
}
